<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio.ResultadoActivity">

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="300dp"
        android:layout_height="83dp"
        android:background="#FFFFFF"
        android:text="Resultado"
        android:textColor="#000000"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/MostrarOperacion"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="dsadasdsds"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Resultado" />

    <TextView
        android:id="@+id/etResultado"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:background="@color/teal_200"
        android:maxLines="1"
        android:singleLine="true"
        android:text="dsadasdsds"
        android:textSize="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MostrarOperacion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="188dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="Atras"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etResultado" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>